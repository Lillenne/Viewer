@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudDialogProvider
    Position="DialogPosition.Center"
    CloseButton="true"
    MaxWidth="MaxWidth.ExtraLarge"
    CloseOnEscapeKey="true"
    />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudSpacer/>
        <MudText Typo="Typo.h6">Family photos</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart"
                       Color="Color.Inherit"
                       @onclick="@ToggleCart"/>
    </MudAppBar>
    <MudDrawer Anchor="Anchor.Left" ClipMode="DrawerClipMode.Docked" Variant="DrawerVariant.Mini">
        <MudNavMenu>
            <MudNavLink Icon="@Icons.Material.Filled.Home" Href="@Routes.Home">Home</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Login" Href="@Routes.Login">Login</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.AppRegistration" Href="@Routes.Register">Register</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    
    <MudDrawer @bind-Open="@_cartOpen" Anchor="Anchor.Right" ClipMode="DrawerClipMode.Docked" Variant="DrawerVariant.Persistent">
        <CartView />
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _cartOpen = true;

    private void ToggleCart() => _cartOpen = !_cartOpen;
}