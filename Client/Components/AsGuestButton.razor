@using Viewer.Client.ServiceClients
@using Viewer.Shared
@using System.Diagnostics
@inject IAuthClient Client

<MudButton OnClick="@LoginAsGuest">Continue as guest</MudButton>

@code {

    private async Task LoginAsGuest()
    {
        var guestLogin = new UserLogin() 
        { 
            Username = GuestCredentials.Username, 
            Password = GuestCredentials.Password 
        };
        var loginInAsGuest = await Client.Login(guestLogin);
        Debug.Assert(loginInAsGuest);
    }

}